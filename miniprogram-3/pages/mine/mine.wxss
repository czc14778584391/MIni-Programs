.page-content{
  height: 100%;
  width: 45%;
  background:#E6E7EA;
  position: fixed;
  padding-top:0;
  z-index: 0;
}
.item{
  display: flex;
  color: black;
  padding: 25rpx 0 40rpx 0;
  text-align: center;
  border-top: 1rpx solid #ddd; 
}
.item image{
  margin-left: 40rpx;
  height: 80rpx;
  width: 80rpx;
}

.scroll{
  height:92%; 
}

.weui-btn{
  width: 50rpx;
  height: 50rpx;
}

.content{
  margin-left: 25rpx;
  margin-top: 20rpx;
}
.page-top{
  height: 100%;
  width:100%;
  position: fixed;
  z-index: 1;
  background: #e0e0e0;
  transition: All 0.4s ease;
}


.top{
  z-index: 2;
  height: 100rpx;
  background-color: pink;  
  display: flex;
}
.chooseDate{
  width: 200rpx;
}
.slide{
  position: fixed;
  width: 70rpx;
  height: 70rpx;
  left: 5rpx;
  top: 15rpx;
}

.pop{
  transform:scale(1) translate(45%,0%);
}
.tips{
border: 3rpx #33CD5F solid;
background-color: #33CD5F;
text-align: center;
color: white;
}

.showdata{
  margin-left: 110rpx;
  padding-top: 28rpx;
  font-size: 30rpx;
  width: 200rpx;
}
.addBox_screen{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
.userimage{
  height: 80rpx;
  width: 210rpx;
 margin-top: 80rpx;
 margin-bottom: 80rpx;
 font-size:25rpx;
}

.addbBox{
  width:650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #FAFAFA;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 5rpx;
}

.add-page{
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
  color: #676767;
  padding: 30rpx 0;
}

.mod-a{
  padding: 0 20rpx;
  border: 1px solid #f0f0f0;
  background-color: #fff;
}

.input{
  font-size: 25rpx;
}
.inputpre{
   font-size: 25rpx;
  width: 150rpx;
}

.mod{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 20rpx;
}

.arrow-r{
  width: 9rpx;
  height: 17rpx;
  margin-left: 10rpx;
}
.arrow-d{
  width: 17rpx;
  height: 9rpx;
  margin-left: 10rpx;
}
.value{
  color: #b2b2b2;
}
.create{
  margin-top: 80rpx;
  padding: 0 26rpx;
}
.create .btn{
  height: 80rpx;
  line-height: 80rpx;
  background-color: pink;
  color: #fff;
}

.create .disabled{
  opacity: 0.4
}

.mt20{
  margin-top: 20rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top:50rpx; 
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.left {
  padding-top: 12rpx;
  line-height: 40px;
  font-size: 14px;
  padding-left:15px;
  color:#666;
}
.left .span {
  color:#ff533b;
}




